{
    "compilerOptions": {
      "target": "ES6",                     // Target JavaScript version
      "module": "commonjs",                // Module code generation
      "strict": true,                      // Enable strict type-checking options
      "esModuleInterop": true,             // Enable import compatibility with CommonJS modules
      "skipLibCheck": true,                // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true // Ensure consistent casing in file names
    },
    "include": [
      "./**/*.ts"                           // Include all TypeScript files in the project
    ],
    "exclude": [
      "node_modules"                        // Exclude the node_modules folder
    ]
  }
  